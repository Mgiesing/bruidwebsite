<?php

switch ($_POST["actie"])
{
    case "plus":
        echo $_POST["num1"]+$_POST["num2"];
        break;
    case "min":
        echo $_POST["num1"]-$_POST["num2"];
        break;
    case "keer":
        echo $_POST["num1"]*$_POST["num2"];
        break;
    case "delen":
        echo $_POST["num1"]/$_POST["num2"];
        break;
}

?>

